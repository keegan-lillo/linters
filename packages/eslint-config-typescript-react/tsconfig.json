{
  "include": ["**/.*rc.js", "**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "module": "es6",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "allowJs": true
  }
}
